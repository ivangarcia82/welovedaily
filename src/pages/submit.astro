			</form>
			
		</div>
	</main>
</Layout>



<script>


// Get the 'plan' parameter value from the URL
const urlParams = new URLSearchParams(window.location.search);
const planValue = urlParams.get('plan');

// Find the radio button with the matching value and check it
const radioButtons = document.querySelectorAll('input[name="plan"]');
radioButtons.forEach((radio) => {
if (radio.value === planValue) {
	radio.checked = true;
}
});

document.getElementById('add-file').addEventListener('click', function() {
  var hiddenLabel = document.querySelector('#file-inputs label.hidden');
  if (hiddenLabel) {
    hiddenLabel.classList.remove('hidden');
  }
  var numVisible = document.querySelectorAll('#file-inputs label:not(.hidden)').length;
  if (numVisible === 10) {
    document.getElementById('add-file').classList.add('hidden');
  }
});
</script>

<style>
	em{
		@apply not-italic text-transparent bg-clip-text bg-gradient-to-r from-webdesign_1 to-webdesign_2;
	}
</style>