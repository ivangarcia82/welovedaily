---

import Layout from '../layouts/Layout.astro';

---

<Layout title="welovedaily">
	<main>
        
		<div class="mx-auto container text-center max-w-[900px] mb-40">

			<h1 class="text-xl lg:text-3xl mb-20">Submit your work</h1>

			<form class="text-left max-w-[600px] mx-auto" netlify
			netlify-honeypot
			name="Submission"
			method="POST"
			action="/success">

				<div class="flex w-full gap-4">

					<label class="grow">
						Your name
						<input class="mt-1 mb-4 block w-full rounded-md form-input px-5 py-4 bg-darkgrey" type="text" name="name" placeholder="John Doe" required/>
					</label>

					<label class="grow">
						Your email
						<input class="mt-1 mb-4 block w-full rounded-md form-input px-5 py-4 bg-darkgrey" type="email" name="email" placeholder="john@doe.com" required />
					</label>

				</div>
				
				<label class="grow">
					Project name
					<input class="mt-1 mb-4 block w-full rounded-md form-input px-5 py-4 bg-darkgrey" type="text" name="project" placeholder="My awesome project" />
				</label>

				<label class="grow">
					Credits
					<input class="mt-1 mb-4 block w-full rounded-md form-input px-5 py-4 bg-darkgrey" type="text" name="credits" placeholder="By My Studio @mystudio" />
				</label>


				<div id="file-inputs" class="grid  w-full gap-4 mb-4">
					<label class="grow">
						File 1
						<input class="mt-1 block w-full rounded-md form-input px-5 py-4 bg-darkgrey" type="file" name="file_1" placeholder="For example a Dropbox or Google Drive link" />
					</label>
				</div>
					
				<div class="block text-right">
					<div id="add-file" class="px-4 py-2 border-2 rounded-lg mb-4 text-basesm mx-auto inline-block text-center cursor-pointer">
						Add another file
						<svg class="ml-2 w-[26px] inline" width="31" height="32" viewBox="0 0 31 32" fill="none" xmlns="http://www.w3.org/2000/svg">
							<path fill-rule="evenodd" clip-rule="evenodd" d="M14.5 31.5V0.5H16.5V31.5H14.5Z" fill="white"></path>
							<path fill-rule="evenodd" clip-rule="evenodd" d="M0 15L31 15L31 17L-8.74228e-08 17L0 15Z" fill="white"></path>
					</svg>
					</div>
				</div>

				<label for="channel block">Channel</label>
				<div class="grid grid-cols-2 mb-12 gap-2 pt-2">
					<div>
						<input type="radio" value="welovewebdesign" name="channel" id="welovewebdesign" class="peer hidden" />
						<label
						for="welovewebdesign"
						class="block cursor-pointer select-none rounded-xl p-6 bg-darkgrey text-center peer-checked:from-webdesign_1 peer-checked:to-webdesign_2 bg-gradient-to-r peer-checked:text-black"
						>welovewebdesign</label>		
					</div>
					<div>
						<input type="radio" value="welovebranding" name="channel" id="welovebranding" class="peer hidden" />
						<label
						for="welovebranding"
						class="block cursor-pointer select-none rounded-xl p-6 bg-darkgrey text-center peer-checked:from-branding_1 peer-checked:to-branding_2 bg-gradient-to-r peer-checked:text-black"
						>welovebranding</label>
					</div>
					<div>
						<input type="radio" value="weloveillustrations" name="channel" id="weloveillustrations" class="peer hidden" />
						<label
						for="weloveillustrations"
						class="block cursor-pointer select-none rounded-xl p-6 bg-darkgrey text-center peer-checked:from-illustration_1 peer-checked:to-illustration_2 bg-gradient-to-r peer-checked:text-black"
						>weloveillustrations</label>
					</div>
					<div>
						<input type="radio" value="weloveanimations" name="channel" id="weloveanimations" class="peer hidden" />
						<label
						for="weloveanimations"
						class="block cursor-pointer select-none rounded-xl p-6 bg-darkgrey text-center peer-checked:from-animations_1 peer-checked:to-animations_2 bg-gradient-to-r peer-checked:text-black"
						>weloveanimations</label>
					</div>
				</div>

				<button class="px-10 py-4 border-2 rounded-lg text-base mx-auto block">Submit for review</button>

				<svg class="w-[80px] mt-12 mx-auto" viewBox="0 0 452 188" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink"><title>Logo</title><defs><path id="a" d="M.06.667h451.623V188H.06V.667z"/></defs><g fill="none" fill-rule="evenodd"><mask id="b" fill="#fff"><use xlink:href="#a"/></mask><path d="M47.2 84.934c-9.733-3.6-15.067-6.4-15.067-10.8 0-3.734 3.067-5.867 8.534-5.867 10 0 20.266 3.867 27.333 7.333l4-24.666c-5.6-2.667-17.067-7.067-32.933-7.067-11.2 0-20.534 2.933-27.2 8.4-6.934 5.733-10.534 14-10.534 24 0 18.133 11.067 25.867 29.067 32.4 11.6 4.133 15.467 7.067 15.467 11.6 0 4.4-3.734 6.933-10.534 6.933-8.4 0-22.266-4.133-31.333-9.466l-4 24.933c7.733 4.4 22.133 8.933 37.067 8.933 11.866 0 21.733-2.8 28.4-8.133C72.933 137.6 76.8 128.934 76.8 117.734c0-18.534-11.333-26.267-29.6-32.8zM141.917 70.4l4-24.533H124.8V16.085l-28.392 4.672-4.1 25.11-9.986 1.62L78.584 70.4h13.683v48.134c0 12.533 3.2 21.2 9.733 26.533 5.467 4.4 13.333 6.533 24.4 6.533 8.533 0 13.733-1.466 17.333-2.4v-26c-2 .534-6.533 1.467-9.6 1.467-6.533 0-9.333-3.333-9.333-10.933V70.4h17.117zm63.416-25.966c-9.333 0-16.8 4.9-19.733 13.7l-2-12.267h-28.933V149.6h33.066V82.267c4.134-5.067 10-6.899 18-6.899 1.734 0 3.6 0 5.867.4V45.234c-2.267-.533-4.267-.8-6.267-.8zm30.934-8.834c9.6 0 17.333-7.866 17.333-17.466C253.6 8.4 245.867.667 236.267.667 226.533.667 218.8 8.4 218.8 18.134c0 9.6 7.733 17.466 17.467 17.466zM219.6 45.867h33.2V149.6h-33.2V45.867zM346.883 55.2c-5.867-7.6-14-11.333-24.4-11.333-9.6 0-18 4-25.867 12.4l-1.733-10.4h-29.067V188l33.067-5.466V149.2c5.066 1.6 10.266 2.4 14.933 2.4 8.267 0 20.267-2.133 29.6-12.266 8.933-9.734 13.467-24.8 13.467-44.667 0-17.6-3.334-30.933-10-39.467zm-27.467 64c-2.667 5.067-6.8 7.734-11.6 7.734-3.333 0-6.267-.667-8.933-2V75.6c5.6-5.866 10.666-6.533 12.533-6.533 8.4 0 12.533 9.067 12.533 26.8 0 10.133-1.466 18-4.533 23.333zm132.267-22.4c0-16.533-3.6-29.6-10.667-38.8-7.2-9.333-18-14.133-31.733-14.133-28.134 0-45.6 20.8-45.6 54.133 0 18.667 4.666 32.