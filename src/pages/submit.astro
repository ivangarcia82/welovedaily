			</form>
			
		</div>
	</main>
</Layout>



<script>

  const addFileButton = document.getElementById("add-file");
  const fileInputsContainer = document.getElementById("file-inputs");
  const maxNumFileInputs = 6;
  let numFileInputs = 1;

  addFileButton.addEventListener("click", () => {
    if (numFileInputs < maxNumFileInputs) {
      const newFileInput = document.createElement("label");
      newFileInput.classList.add("grow");
      newFileInput.innerHTML = `
        File ${numFileInputs + 1}
        <input class="mt-1 block w-full rounded-md form-input px-5 py-4 bg-darkgrey" type="file" name="file_${numFileInputs + 1}" placeholder="For example a Dropbox or Google Drive link" />
      `;
      fileInputsContainer.appendChild(newFileInput);
      numFileInputs++;

      if (numFileInputs === maxNumFileInputs) {
        addFileButton.style.display = "none";
      }
    }
  });
</script>