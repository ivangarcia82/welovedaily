---

import Layout from '../layouts/Layout.astro';

import Marquee from '../components/Marquee.astro';
import Card from '../components/Card.astro';
import Slide from '../components/Slide.astro';
import ListItem from '../components/ListItem.astro';

---

<Layout title="welovedaily">
	<main>
	
		<div class="mx-auto container text-center">

			<h1 class="text-xl lg:text-3xl mb-20 mx-auto max-w-[1000px]">Share your work on the <em class="not-italic underline">biggest design community</em> on Instagram.</h1>
			
		</div>
	
		<div class="text-center">
			
			<h2 class="uppercase opacity-50 mb-4">Our channels</h2>
			<ul class="text-4xl mb-20">

				<li>
					<Marquee
						href="https://www.instagram.com/welovewebdesign/"
						title="welovewebdesign"
						color1="webdesign_1"
						color2="webdesign_2"
						count="701k"
					/>
				</li>
				<li>
					<Marquee
						href="https://www.instagram.com/welovebranding/"
						title="welovebranding"
						color1="branding_1"
						color2="branding_2"
						count="543k"
					/>
				</li>
				<li>
					<Marquee
						href="https://www.instagram.com/weloveillustration/"
						title="weloveillustration"
						color1="illustration_1"
						color2="illustration_2"
						count="485k"
					/>
				</li>
				<li>
					<Marquee
						href="https://www.instagram.com/weloveanimations/"
						title="weloveanimations"
						color1="animations_1"
						color2="animations_2"
						count="194k"
					/>
				</li>
				
			</ul>

		</div>



		<div class="container mx-auto my-40">
			<div class="flex gap-2">

				<div class="w-1/3">
					<Card
						title="Starter"
						description="Post up to 10 images or videos in square format to our instagram feed for 2 weeks or longer. At one of our 4 channels."
						price="$28"
					/>
				</div>
				<div class="w-1/3">
					<Card
						title="Regular"
						description="Post up to 10 images or videos in square format to our instagram feed for 2 weeks or longer. At one of our 4 channels."
						price="$34"
					/>
				</div>
				<div class="w-1/3">
					<Card
						title="Pro"
						description="Post up to 10 images or videos in square format to our instagram feed for 2 weeks or longer. At one of our 4 channels."
						price="$40"
					/>
				</div>

			</div>
		</div>


		<div class="flex overflow-hidden image-marquee mt-40">

			<Slide
				image="/img/caserne.jpg"
				page="welovebranding"
			/>
			<Slide
				image="/img/fishcamp.jpg"
				page="welovewebdesign"
			/>
			<Slide
				image="/img/japan.jpg"
				page="welovewebdesign"
			/>
			<Slide
				image="/img/caserne.jpg"
				page="welovanimations"
			/>
			<Slide
				image="/img/fishcamp.jpg"
				page="welovewebdesign"
			/>
			<Slide
				image="/img/japan.jpg"
				page="welovanimations"
			/>
			<Slide
				image="/img/caserne.jpg"
				page="welovanimations"
			/>
			<Slide
				image="/img/fishcamp.jpg"
				page="welovebranding"
			/>
			<Slide
				image="/img/japan.jpg"
				page="welovewebdesign"
			/>
			

		</div>


		<div class="container mx-auto my-20">
			<div class="flex gap-20">
				<div>

					<ListItem text="Share your work with designers from all over the world." />

				</div>
				<div>

					<ListItem text="Inspire yourself and others with your designs." />

				</div>
				<div>

					<ListItem text="Grow your follower base and reach potential clients." />

				</div>

			</div>
		</div>


		<div class="container mx-auto my-40">
			<div class="grid grid-cols-12 gap-20 items-center">
				<div class="col-span-5 col-start-2">
					<img class="aspect-square rounded-3xl" src="/img/fishcamp.jpg" alt="">
					<div class="mt-2 p-8 rounded-3xl bg-darkgrey">
						<p class="text-base">By George Smith @georgesmith<br />
						Follow us @welovewebdesign<br />
						Link:  instagram.com/p/Cq-ABFyNQ19/</p>
					</div>
				</div>
				<div class="col-span-5">
					<h2 class="text-3xl mb-4">All designs Â© of their respective owners</h2>
					<p class="text-base font-normal	">We at welovedaily think it's important that it's about you, the designer. The appreciation must go to you, not to us.</p>
				</div>
			</div>
		</div>

	</main>
</Layout>