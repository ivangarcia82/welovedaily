---

import Layout from '../layouts/Layout.astro';

import Logo from '../snippets/Logo.astro';

import Marquee from '../components/Marquee.astro';
import Card from '../components/Card.astro';
import Slide from '../components/Slide.astro';

---

<Layout title="welovedaily">
	<main>
	
		<div class="mx-auto container text-center">

			<Logo />

			<h1 class="text-xl lg:text-3xl mb-20 mx-auto max-w-[1000px]">Share your work on the biggest design community on Instagram.</h1>
			
		</div>
	
		<div class="text-center">
			
			<h2 class="uppercase opacity-50 mb-4">Our channels</h2>
			<ul class="text-4xl mb-20">

				<li>
					<Marquee
						href="https://www.instagram.com/welovewebdesign/"
						title="welovewebdesign"
						color1="webdesign_1"
						color2="webdesign_2"
						count="700k"
					/>
				</li>
				<li>
					<Marquee
						href="https://www.instagram.com/welovebranding/"
						title="welovebranding"
						color1="branding_1"
						color2="branding_2"
						count="543k"
					/>
				</li>
				<li>
					<Marquee
						href="https://www.instagram.com/weloveillustration/"
						title="weloveillustration"
						color1="illustration_1"
						color2="illustration_2"
						count="485k"
					/>
				</li>
				<li>
					<Marquee
						href="https://www.instagram.com/weloveanimations/"
						title="weloveanimations"
						color1="animations_1"
						color2="animations_2"
						count="194k"
					/>
				</li>
				
			</ul>

		</div>


		<div class="flex overflow-hidden image-marquee mt-40">

			<Slide
				image="/img/caserne.jpg"
			/>
			<Slide
				image="/img/fishcamp.jpg"
			/>
			<Slide
				image="/img/japan.jpg"
			/>
			<Slide
				image="/img/caserne.jpg"
			/>
			<Slide
				image="/img/fishcamp.jpg"
			/>
			<Slide
				image="/img/japan.jpg"
			/>
			<Slide
				image="/img/caserne.jpg"
			/>
			<Slide
				image="/img/fishcamp.jpg"
			/>
			<Slide
				image="/img/japan.jpg"
			/>
			

		</div>


		<div class="container mx-auto my-40">
			<div class="flex gap-2">

				<div class="w-1/3">
					<Card
						title="Starter"
						description="Post up to 10 images or videos in square format to our instagram feed for 2 weeks or longer. At one of our 4 channels."
						price="$28"
					/>
				</div>
				<div class="w-1/3">
					<Card
						title="Regular"
						description="Post up to 10 images or videos in square format to our instagram feed for 2 weeks or longer. At one of our 4 channels."
						price="$34"
					/>
				</div>
				<div class="w-1/3">
					<Card
						title="Pro"
						description="Post up to 10 images or videos in square format to our instagram feed for 2 weeks or longer. At one of our 4 channels."
						price="$40"
					/>
				</div>

			</div>
		</div>

	</main>
</Layout>